<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="et_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/dp_padding_x_min</item>
        <item name="android:layout_marginRight">@dimen/dp_padding_x_min</item>
        <item name="android:background">@color/color_line</item>
    </style>
    <style name="MyDialogStyle1">
        <item name="android:windowBackground">@android:color/transparent</item><!-- 设置dialog背景为透明背景 -->
        <item name="android:backgroundDimEnabled">false</item><!-- 设置dialog背景不变暗 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="main_btn">
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:background">@drawable/btn_main_button</item>
        <item name="android:textColor">@color/color_FFFFFF</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/dp_padding_x_min</item>
        <item name="android:layout_marginEnd">@dimen/dp_padding_x_min</item>
    </style>


    <style name="main_btn_2">
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:background">@drawable/btn_main_button_2</item>
        <item name="android:textColor">@color/color_FFFFFF</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/dp_padding_x_min</item>
        <item name="android:layout_marginEnd">@dimen/dp_padding_x_min</item>
    </style>


    <style name="line">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/color_line</item>
    </style>


</resources>
