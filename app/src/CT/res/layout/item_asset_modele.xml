<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_85">


    <com.qingyun.mvpretrofitrx.mvp.weight.FpShadowLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:fp_round_corner="fp_corner_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fp_shadowColor="@color/shadow_color"
        app:fp_shadowRadius="@dimen/dp_8"
        app:fp_shadowRoundRadius="@dimen/dp_7"
        app:fp_shadowShape="fp_round_rectangle"
        app:fp_shadowSide="fp_all"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_ffffff_round_7"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sy_ziyuan"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/asset"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />


        </android.support.constraint.ConstraintLayout>
    </com.qingyun.mvpretrofitrx.mvp.weight.FpShadowLayout>



</android.support.constraint.ConstraintLayout>