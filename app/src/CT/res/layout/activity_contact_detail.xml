<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_FFFFFF"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_name"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_marginStart="@dimen/dp_padding_x_min"
        android:layout_marginTop="@dimen/dp_padding_x_min"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/avater_default" />

    <com.qingyun.mvpretrofitrx.mvp.weight.BoldTextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:includeFontPadding="false"
        android:text="TextView"
        android:textSize="@dimen/sp_15"
        app:layout_constraintStart_toEndOf="@+id/iv_name"
        app:layout_constraintTop_toTopOf="@+id/iv_name" />

    <TextView
        android:id="@+id/tv_beizu"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_id"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvname"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/tvname"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_999999"
        android:text="TextView"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="56dp" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@+id/tvname"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_999999"
        app:layout_constraintBottom_toBottomOf="@+id/iv_name"
        tools:layout_editor_absoluteX="104dp" />

    <com.qingyun.mvpretrofitrx.mvp.weight.BoldTextView
        android:id="@+id/btn_send_message"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_marginEnd="@dimen/sp_20"
        android:background="@drawable/bg_f5f5f5_round_8"
        android:gravity="center"
        android:text="@string/send_message"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_name" />

    <TextView
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/line"
        app:layout_constraintTop_toBottomOf="@+id/iv_name"
        android:layout_marginTop="@dimen/dp_padding_x_min"
        android:layout_marginStart="@dimen/dp_padding_x_min"
        />

</android.support.constraint.ConstraintLayout>