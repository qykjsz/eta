<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ly_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_ffffff_top_round_25"
        app:layout_constraintTop_toBottomOf="@+id/et_search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_padding_x_min"
        android:paddingTop="@dimen/dp_25"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0">



        <com.qingyun.mvpretrofitrx.mvp.weight.BoldTextView
            android:id="@+id/btn_new_friends"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_60"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:text="@string/new_friends"
            android:drawablePadding="@dimen/dp_padding_x_min"
            android:paddingStart="@dimen/dp_padding_x_min"
            android:drawableStart="@mipmap/lt_xpy_icon"

            />



        <com.qingyun.mvpretrofitrx.mvp.weight.BoldTextView
            android:id="@+id/btn_group"
            app:layout_constraintTop_toBottomOf="@+id/btn_new_friends"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_60"
            android:textSize="@dimen/sp_15"
            android:gravity="center_vertical"
            android:text="@string/group_chat"
            android:drawablePadding="@dimen/dp_padding_x_min"
            android:paddingStart="@dimen/dp_padding_x_min"
            android:drawableStart="@mipmap/lt_ql_icon"

            />


        <android.support.v7.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@+id/btn_group"
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"/>


        <com.qingyun.mvpretrofitrx.mvp.view.lettercontact.WaveSideBarView
            android:id="@+id/side_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

    </android.support.constraint.ConstraintLayout>




    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_36"
        android:drawableStart="@mipmap/lt_ss_icon"
        android:drawablePadding="@dimen/dp_12"
        android:hint="@string/search"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="@dimen/dp_25"
        android:background="@drawable/bg_ffffff_round_18"
        android:layout_marginStart="@dimen/dp_padding_x_min"
        android:layout_marginEnd="@dimen/dp_padding_x_min"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="32dp" />





</android.support.constraint.ConstraintLayout>
