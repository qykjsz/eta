<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ly_1"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcy"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        </android.support.v7.widget.RecyclerView>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



    <android.support.constraint.ConstraintLayout
        android:id="@+id/ly_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_F3F3FC"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_60">


        <EditText
            android:id="@+id/et_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_send"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/bg_ffffff_round_20"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40" />


        <TextView
            android:id="@+id/btn_send"
            android:text="@string/send"
            app:layout_constraintTop_toTopOf="@+id/et_content"
            app:layout_constraintBottom_toBottomOf="@+id/et_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_padding_x_min"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:gravity="center"
            />


    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>