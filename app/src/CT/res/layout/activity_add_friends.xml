<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/et_search"
        android:layout_width="@dimen/dp_0"
        app:layout_constraintTop_toTopOf="parent"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
        android:drawablePadding="@dimen/dp_10"
        android:hint="@string/search_friends_hint"
        android:textSize="@dimen/sp_12"
        android:paddingStart="@dimen/dp_padding_x_min"
        android:paddingEnd="@dimen/dp_padding_x_min"
        android:drawableStart="@mipmap/sy_sousuo"
        android:background="@color/color_FFFFFF"
        android:layout_height="@dimen/dp_49" />

    <TextView
        android:id="@+id/btn_cancel"
        app:layout_constraintTop_toTopOf="@+id/et_search"
        android:layout_marginEnd="@dimen/dp_padding_x_min"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"

        />


    <TextView
        android:id="@+id/textView75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/friends_"
        android:layout_marginStart="@dimen/dp_padding_x_min"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dp_8"
        android:drawableStart="@mipmap/lt_tjhyss"
        app:layout_constraintStart_toStartOf="@+id/et_search"
        app:layout_constraintTop_toBottomOf="@+id/et_search" />



    <TextView
        android:id="@+id/textView751"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_padding_x_min"
        android:visibility="gone"
        android:text="@string/groups_"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dp_8"
        android:drawableStart="@mipmap/lt_tjhyss"
        app:layout_constraintStart_toStartOf="@+id/et_search"
        app:layout_constraintTop_toBottomOf="@+id/btn_search_it" />

    <TextView
        android:id="@+id/btn_search_it"
        android:layout_width="0dp"
        android:paddingStart="@dimen/dp_5"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:textColor="@color/main_blue"
        android:layout_marginEnd="@dimen/dp_padding_x_min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textView75"
        app:layout_constraintStart_toEndOf="@+id/textView75"
        app:layout_constraintTop_toTopOf="@+id/textView75" />



    <TextView
        android:id="@+id/btn_search_group"
        android:layout_width="0dp"
        android:paddingStart="@dimen/dp_5"
        android:layout_height="wrap_content"
        android:textColor="@color/main_blue"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/dp_padding_x_min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textView751"
        app:layout_constraintStart_toEndOf="@+id/textView751"
        app:layout_constraintTop_toTopOf="@+id/textView751" />


    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        style="@style/line"
        app:layout_constraintTop_toBottomOf="@+id/et_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        ></android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>